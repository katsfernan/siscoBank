
<div class="flex flex-col justify-center items-center mt-4">

    <div class="max-w rounded overflow-hidden shadow-lg p-4">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2 text-center">Detalle del usuario</div>
      <p class="text-gray-700 text-base"> <strong class="font-bold">Nombre:</strong> <%=@user.name%></p>
      <p class="text-gray-700 text-base"><strong class="font-bold">Email:</strong>  <%=@user.email%></p>
      <p class="text-gray-700 text-base"><strong class="font-bold">Tipo de persona:</strong> <%= @personType.name %> </p>
      <p class="text-gray-700 text-base"><strong class="font-bold">Tipo de documento:</strong>  <%= @identifierType.name %></p>
      <p class="text-gray-700 text-base"><strong class="font-bold">Fecha de emision documento:</strong> <%= @emissionDate %></p>
      <p class="text-gray-700 text-base"><strong class="font-bold">Fecha de vencimiento documento:</strong><%= @expirationDate %></p>
      <h3></h3>
    </div>
    <div class="px-6 pt-4 pb-2">
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
            <strong class="font-bold">Telefono principal:</strong> <%= @user.primaryPhone %>
        </span>
        <% if @user.secondaryPhone.length > 0 %>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                <strong class="font-bold">Telefono secundario:</strong>   <%= @user.secondaryPhone %>
            </span>
        <% end %>
    </div>  
  </div>
</div>



