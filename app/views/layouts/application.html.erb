<!DOCTYPE html>
<html>
  <head>
    <title>SiscoBank</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>    
    <% if alert%>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="alert font-bold"><%= alert %></strong>
          <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
            <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
          </span> 
      </div>
    <% end %>
    <% if notice %>
      <div class="bg-green-300 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold"><%= notice %></strong>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
          <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
        </span> 
      </div>
    <% end %>
    <div class="bg-slate-200 flex flex-row justify-between p-2 border-2 border-slate-500">
      <% if current_user %>
      <h1 class="text-2l font-bold">
        Bienvenido: <%= current_user.email%>
      </h1>
        <div class="flex gap-2">
          <%= link_to "Editar usuario", edit_user_registration_path, class:"hover:text-slate-400"%>
          <%= link_to "Usuarios", dashboard_path, class:"hover:text-slate-400"%>
          <%= 
            button_to "Cerrar sesión", destroy_user_session_path, method: :delete, 
            data: {turbo: false},
            class:"hover:text-slate-400"
          %>
          <% else %>
          <%= link_to "Iniciar sesión", new_user_session_path, class:"hover:text-slate-400"%>
          <%= link_to "Registrarse", new_user_registration_path, class:"hover:text-slate-400"%>
          <% end %>
        </div>
    </div>
    <%= yield %>

  </body>
</html>
